" Use vim , not vi
set nocompatible

" Detect filetype, indent on
filetype plugin indent on
" built in syntax highlighting
syntax on

set noswapfile
set modelines=0

set nohidden
"Numbered lines
set number
set relativenumber
set ruler
" Encoding = UTF8
set encoding=utf-8

set nowrap
" Use spaces instead of tabs, tab indent 4 spaces
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set noshiftround
set autoindent
set smartindent

set display=lastline
set laststatus=2

set showmode
set showcmd

set incsearch
set ignorecase
set smartcase
set showmatch

set splitbelow
set splitright

set wrapscan
set report=0


set t_Co=256
set background=light
colorscheme PaperColor
